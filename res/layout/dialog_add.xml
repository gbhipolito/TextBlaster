<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >
    
	<EditText
	    android:id="@+id/dlg_et_name"
	    android:layout_width="800dp"
	    android:layout_height="52dp"
	    android:hint="Contact name"
	    android:singleLine="true"
	    android:maxLines="1"
	    android:maxLength="20"
	    android:background="#FFFFFF" />
	
	<EditText
	    android:id="@+id/dlg_et_num"
	    android:layout_width="800dp"
	    android:layout_height="52dp"
	    android:layout_below="@id/dlg_et_name"
	    android:hint="Phone number"
	    android:inputType="phone"
	    android:singleLine="true"
	    android:maxLines="1"
	    android:maxLength="11"
	    android:background="#FFFFFF" />
	
	<Button
	    android:id="@+id/dlg_btn_add"
	    android:layout_width="wrap_content"
	    android:layout_height="54dp"
	    android:layout_below="@id/dlg_et_num"
	    android:text="Add" />
    
	<Button
	    android:id="@+id/dlg_btn_cancel"
	    android:layout_width="wrap_content"
	    android:layout_height="54dp"
	    android:layout_below="@id/dlg_et_num"
	    android:layout_toRightOf="@id/dlg_btn_add"
	    android:text="Cancel" />
    
</RelativeLayout>